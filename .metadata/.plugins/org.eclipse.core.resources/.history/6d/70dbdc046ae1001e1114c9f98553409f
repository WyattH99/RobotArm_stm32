/* USER CODE BEGIN PTD */

typedef struct{
	uint8_t  PotNum;
	uint16_t PotMin;
	uint16_t PotMax;
	uint8_t  ServoNum;
	uint16_t ServoMin;
	uint16_t ServoMax;

} Joint_Config_t;

typedef struct{
	GPIO_TypeDef* GPIOx;
	uint16_t GPIO_Pin;
	uint8_t  ServoNum;
	uint16_t ServoMin;
	uint16_t ServoMax;

} Gripper_Config_t;

